@model List<Tasks>

<h1 style="text-align: center">Task List</h1>
<p>Important Tasks</p>

<div class="container border border-dark">
    <div class="row border-bottom border-dark">
        <div class="col-12 text-center">
            <h1>Stephen Covey's Time Management Matrix</h1>
        </div>
    </div>

    <div class="row border-bottom border-dark">
        <div class="col-2">
        </div>
        <div class="col-5 border-left border-dark">
            <h3>Urgent</h3>
            
        </div>
        <div class="col-5 border-left border-dark">
            <h3>Not Urgent</h3>
        </div>
    </div>

    <div class="row border-bottom border-dark">
        <div class="col-2">
            <h3>Important</h3>
        </div>
        <div class="col-5 border-left border-dark">
            <h4>Quadrant 1</h4>
            <table class="table">
                @foreach (var x in Model)
                {
                    @if (x.Quadrant == 1)
                    {
                        <tr>
                            <td>@x.Task</td>
                            <td>@x.DueDate</td>
                            <td>@x.Category.CategoryName</td>
                            <td>@x.Completed</td>
                            <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.TaskID">Updated</a></td>
                            <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.TaskID">Delete</a></td>
                        </tr>

                    }
                }
            </table>
        </div>
        <div class="col-5 border-left border-dark">
