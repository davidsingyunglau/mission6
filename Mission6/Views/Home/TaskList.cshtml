@{
}

<h1 style="text-align: center">Task List</h1>

<div class="container border border-dark">
    <div class="row border-bottom border-dark">
        <div class="col-12 text-center">
            <h1>Stephen Covey's Time Management Matrix</h1>
        </div>
    </div>

    <div class="row border-bottom border-dark">
        <div class="col-2">
        </div>
        <div class="col-5 border-left border-dark">
            <h3>Urgent</h3>
        </div>
        <div class="col-5 border-left border-dark">
            <h3>Not Urgent</h3>
        </div>
    </div>

    <div class="row border-bottom border-dark">
        <div class="col-2">
            <h3>Important</h3>
            <table class="table">
                @foreach (var x in Model)
                {
                    @if (x.Quandrant == 'Q1')
                    {
                        <tr>
                            <td>@x.Title</td>
                            <td>@x.Director</td>
                            <td>@x.Rating</td>
                            <td>@x.Edited</td>
                            <td>@x.Lent_To</td>
                            <td>@x.Note</td>
                            <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.MovieID">Edit</a></td>
                            <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.MovieID">Delete</a></td>
                        </tr>

                    }
                }
            </table>
        </div>
        <div class="col-5 border-left border-dark">
            <h4>Quadrant 1</h4>
        </div>
        <div class="col-5 border-left border-dark">
            <h4>Quadrant 2</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <h3>Not Important</h3>
        </div>
        <div class="col-5 border-left border-dark">
            <h4>Quadrant 3</h4>
        </div>
        <div class="col-5 border-left border-dark">
            <h4>Quadrant 4</h4>
        </div>
    </div>
</div>

